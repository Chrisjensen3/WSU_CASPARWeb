@page
@model CASPARWeb.Areas.Admin.Pages.AcademicPrograms.DeleteModel
@{
}
<div class="card shadow border-0 mt-4 col-6 mx-auto">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Delete Academic Program</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input type="hidden" asp-for="objAcademicProgram.Id" />
            <div class="border p-3">
                <label class="form-label">Academic Program</label>
                <div class="form-group mt-1">
                    <input disabled id="ddlAcademicProgram" asp-for="objAcademicProgram.ProgramName" asp-items="@Model.objAcademicProgram.ProgramName" class="form-control border-0 shadow">
                </div>
                <div class="row pt-2 mt-3">
                    <div class="col-6">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6">
                        <a asp-page="./Index" class="btn btn-outline-primary border  form-control">
                            Back to Academic Programs
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
