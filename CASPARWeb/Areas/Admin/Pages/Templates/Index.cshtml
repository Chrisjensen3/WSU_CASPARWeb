@page
@model CASPARWeb.Areas.Admin.Pages.Templates.IndexModel
@{
}
<div class="card shadow border-0 mt-8 col-6 mx-auto">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Update @(Model.objSemester.SemesterName) Template</h2>
            </div>
        </div>
    </div>
    <form method="post" class="form">
        <div class="border p-3">
            <table id="myTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Course
                        </th>
                        <th>
                            Quantity
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var obj in Model.objTemplateList)
                    {
                        <input type="hidden" name="objTemplateList.Index" value="@obj.Id"/>
                        <input type="hidden" name="objTemplateList[@obj.Id].Id" value="@obj.Id"/>
                        <input type="hidden" name="objTemplateList[@obj.Id].SemesterId" value="@obj.SemesterId"/>
                        <input type="hidden" name="objTemplateList[@obj.Id].CourseId" value="@obj.CourseId"/>
                        <tr>
                            <td>
                                @obj.Course.AcademicProgram.ProgramCode @obj.Course.CourseNumber - @obj.Course.CourseTitle
                            </td>
                            <td style="width: 10%;">
                                <input type="text" name="objTemplateList[@obj.Id].Quantity" value="@obj.Quantity" style="width: 100%;" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row pt-2">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                </div>
                <div class="col-6">
                    <a asp-page="/Semesters/Index" class=" btn btn-outline-primary border form-control">Back to Semester Templates</a>
                </div>
            </div>
        </div>
    </form>
</div> <!--Close Container-->