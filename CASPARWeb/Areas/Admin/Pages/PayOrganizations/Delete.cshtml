@page
@model CASPARWeb.Areas.Admin.Pages.PayOrganizations.DeleteModel
@{
}
<div class="card shadow border-0 mt-4 col-6 mx-auto">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Delete Pay Organization</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input type="hidden" asp-for="objPayOrganization.Id" />
            <div class="border p-3">
                <div class="mb-3">
                    <label class="form-label">Pay Organization Title</label>
                    <input disabled asp-for="objPayOrganization.PayOrganizationTitle" class="form-control border-0 shadow" />
                </div>
                <div class="row pt-2">
                    <div class="col-6">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6">
                        <a asp-page="./Index" class="btn btn-outline-primary border  form-control">
                            Back to Pay Models
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>