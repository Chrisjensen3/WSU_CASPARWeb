@page
@model CASPARWeb.Areas.Admin.Pages.AcademicPrograms.UpsertModel
@{
}
<div class="card shadow border-0 mt-4 col-6 mx-auto">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">@(Model.objAcademicProgram.Id != 0 ? "Update " : "Add ") Academic Program</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            @*<div asp-validation-summary="ModelOnly"></div>*@
            <input type="hidden" asp-for="objAcademicProgram.Id">
            <div class="border p-3">
                <div class="row">
                    <label class="form-label">Program Name</label>
                    <div class="form-group mt-1">
                        <input id="inputProgramName" asp-for="objAcademicProgram.ProgramName" class="form-control border-0 shadow" />
                    </div>
                    <label class="form-label mt-4">Program Code</label>
                    <div class="form-group mt-1">
                        <input id="inputProgramCode" asp-for="objAcademicProgram.ProgramCode" class="form-control border-0 shadow" />
                    </div>
                </div>
                <div class="row pt-2 mt-3">
                    <div class="col-6">
                        <button type="submit" onclick="return ValidateInput()" class="btn btn-primary form-control">@(Model.objAcademicProgram.Id != 0 ? "Update " : "Add ")</button>
                    </div>
                    <div class="col-6">
                        <a asp-page="./Index" class=" btn btn-outline-primary border form-control">
                            Back to Academic Programs
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    function ValidateInput() {
        if (document.getElementById('inputProgramName').value == "") {
            swal.fire('Error', 'Please Enter a Program Name', 'error');
            return false;
        }
        else if (document.getElementById('inputProgramCode').value == "") {
            swal.fire('Error', 'Please Enter a Program Code', 'error');
            return false;
        }
        return true;
    }
</script>