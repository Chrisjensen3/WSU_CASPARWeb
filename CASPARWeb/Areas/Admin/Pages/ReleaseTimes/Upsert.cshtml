@page
@model CASPARWeb.Areas.Admin.Pages.ReleaseTimes.UpsertModel
@{
}
<div class="card shadow border-0 mt-8 col-6 mx-auto">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Update @(Model.objSemesterInstance.SemesterInstanceName) Release Times</h2>
            </div>
        </div>
    </div>
    <form method="post" class="form">
        <div class="border p-3">
            <table id="myTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Instructor
                        </th>
                        <th>
                            Notes
                        </th>
                        <th>
                            Release Time
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.objReleaseTimeList)
                    {
                        <input type="hidden" name="objReleaseTimeList.Index" value="@obj.Id" />
                        <input type="hidden" name="objReleaseTimeList[@obj.Id].Id" value="@obj.Id" />
                        <input type="hidden" name="objReleaseTimeList[@obj.Id].SemesterInstanceId" value="@obj.SemesterInstanceId" />
                        <input type="hidden" name="objReleaseTimeList[@obj.Id].InstructorId" value="@obj.InstructorId" />
                        <tr>
                            <td>
                                @obj.ApplicationUser.FullName
                            </td>
                            <td>
                                <input type="text" name="objReleaseTimeList[@obj.Id].ReleaseTimeNotes" value="@obj.ReleaseTimeNotes" style="width: 100%;" />
                            </td>
                            <td style="width: 10%;">
                                <input type="text" name="objReleaseTimeList[@obj.Id].ReleaseTimeAmount" value="@obj.ReleaseTimeAmount" style="width: 100%;" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row pt-2">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                </div>
                <div class="col-6">
                    <a asp-page="/ReleaseTimes/Index" class=" btn btn-outline-primary border form-control">Back to Semesters</a>
                </div>
            </div>
        </div>
    </form>
</div>
