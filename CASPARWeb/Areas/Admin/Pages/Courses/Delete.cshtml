@page
@model CASPARWeb.Areas.Admin.Pages.Courses.DeleteModel
@{
}
<div class="card shadow border-0 mt-4 col-6 mx-auto">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Delete Course</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input type="hidden" asp-for="objCourse.Id">
            <div class="border p-3">
                <label class="form-label mt-4">Course Title</label>
                <div class="form-group mt-1">
                    <input disabled id="inputCourseTitle" asp-for="objCourse.CourseTitle" class="form-control border-0 shadow" />
                </div>
                <label class="form-label">Academic Program</label>
                <select disabled id="inputAcademicProgram" asp-for="objCourse.ProgramId" asp-items="@Model.AcademicProgramList" class="form-select border-0 shadow">
                    <option disabled selected>--Select Building--</option>
                </select>
                <label class="form-label mt-4">Course Number</label>
                <div class="form-group mt-1">
                    <input disabled id="inputCourseNumber" asp-for="objCourse.CourseNumber" class="form-control border-0 shadow" />
                </div>
                <label class="form-label mt-4">Description</label>
                <div class="form-group mt-1">
                    <input disabled id="inputCourseDescription" asp-for="objCourse.CourseDescription" class="form-control border-0 shadow" />
                </div>
                <label class="form-label mt-4">Credit Hours</label>
                <div class="form-group mt-1">
                    <input disabled id="inputCourseCreditHours" asp-for="objCourse.CourseCreditHours" class="form-control border-0 shadow" />
                </div>
                <div class="row pt-2 mt-3">
                    <div class="col-6">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6">
                        <a asp-page="./Index" class=" btn btn-outline-primary border form-control">
                            Back to Courses
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>